<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">

</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    <main>
        <ul class="cart__item-list">
            <% products.forEach(p =>{ %>
            <li class="cart__item">
                <h1><%= p.productId.title %></h1>
                <h2>Quantity: <%= p.quantity %></h2>
            </li>
            <% }) %>
        </ul>
        <div class="centered">
            <h2>Total: INR <%= totalSum %></h2>
        </div>
        <div class="centered">
            <form action="/order-now" method="POST">
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="pk_test_Be61cz1GEtDhZ533KAzpn23L008yetYwVw" data-amount="<%= totalSum * 100 %>"
                    data-name="Your Order" data-description="All the item your ordered"
                    data-image="https://stripe.com/img/documentation/checkout/marketplace.png" data-locale="auto"
                    data-currency="INR">
                    </script>
            </form>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>